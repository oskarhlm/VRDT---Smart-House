<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <RootNamespace>UnityUtils</RootNamespace>
  </PropertyGroup>

	<Target Name="AfterBuild">
		<!-- Move the DLL to the Unity project. -->
		<PropertyGroup>
			<TargetDir>..\Unity\Assets\</TargetDir>
		</PropertyGroup>
		<ItemGroup>
			<SourceDir Include="bin\Debug\**\*.*" />
		</ItemGroup>
		<Copy SourceFiles="@(SourceDir)" DestinationFolder="$(TargetDir)" SkipUnchangedFiles="true" />
	</Target>

	<ItemGroup>
	  <PackageReference Include="Grpc.Core" Version="2.46.6" />
	</ItemGroup>

  <ItemGroup>
	 <Protobuf Include="..\..\protos\netatmo.proto" GrpcServices="Client" Link="Protos\netatmo" />
  </ItemGroup>

</Project>
